<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 自定义对话框样式 -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 自定义对话框按钮容器样式 -->
    <style name="custom_dialog_btnparent">
        <item name="android:shadowColor">#ff79351b</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="custom_dialog_msg">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff666666</item>
    </style>
    <!-- 自定义对话框按钮样式 -->
    <style name="custom_dialog_btn" parent="@style/custom_dialog_btnparent">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <!-- 正文显示样式 -->
    <style name="txtStyle">
        <item name="android:textSize">12.0dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ItemRadioBtn">

        <!-- <item name="android:background">@drawable/radio_btn_bg</item> -->
        <item name="android:background">@drawable/radio_item</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- 我的菜单样式 -->
    <style name="personMenuLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">@color/menu_noselect</item>
        <item name="android:background">@drawable/person_layout</item>
         <item name="android:layout_marginTop">10dp</item>
                 <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
<!-- 底部菜单栏样式 -->
    <style name="MMTabButton">
        <item name="android:textSize">12.0dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/main_menu_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
    </style>
    
    <!-- 小正文显示样式 -->
    <style name="littleTxtStyle">
        <item name="android:textSize">15.0dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    
        <!-- 商品详情容器盒子样式 -->
    <style name="product_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
     <!-- 评论星级样式,不可编辑模式 -->
    <style name="RedStartRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/redstar_ratingbar_full</item>
        <item name="android:minHeight">11dip</item>
        <item name="android:maxHeight">11dip</item>
        <item name="android:isIndicator">true</item>
    </style>
<!-- 评论星级样式，可编辑模式 -->
    <style name="EditeStartRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/bigstar_ratingbar_full</item>
        <item name="android:minHeight">11dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>
    
      <!-- 小按钮样式 -->
    <style name="litleBtnStyle">
        <item name="android:textSize">16.0dip</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_animation_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_animation_exit</item>
    </style>
</resources>